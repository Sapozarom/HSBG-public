{% extends 'base.html.twig' %}

{% block title %}Upload Logs{% endblock %}

{% block body %}
<div class="container pt-2">
    
    <div class="row mb-3">
        <div class="d-flex justify-content-center">
            <h2 class="display-5">Upload Logs</h2>
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-4 p-5 mb-5 border bg-light">
            {{ form_start(form) }}

            <div class="row mb-4">
                <div class="col m-0 p-0">
                {{ form_row(form.logFile, {
                    label: false
                }) }}
                </div>
            </div>

            <div class="row">
                <button type="submit" class="btn btn-outline-secondary">Save file</button>
            </div>
            {{ form_end(form) }}
        </div>
    </div>


</div>

{% endblock %}
