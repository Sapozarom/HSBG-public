{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
<div class="container">
    <div class="row mb-3">
        <div class="d-flex justify-content-center">
            <h2 class="display-5">Log in</h2>
        </div>
    </div>

<div class="row justify-content-center ">
    <div class="col-4 p-5 mb-5 border bg-light">
        <form method="post">
            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            {% if app.user %}
                <div class="mb-3">
                    You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
                </div>
            {% endif %} 

            <div class="row mb-4">
                <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" placeholder="Email" required autofocus>
            </div>
            <div class="row mb-4">
                <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" placeholder="Password" required>
            </div>
            <input type="hidden" name="_csrf_token"
                value="{{ csrf_token('authenticate') }}"
            >

            <div class="row ">
                
                    <button class="btn btn-outline-secondary" type="submit">
                        Sign in
                    </button>
                
            </div>  
        </form>
    </div>
</div>
</div>
{% endblock %}
